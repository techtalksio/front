if (!controller)
    - controller = 'home'
nav.navbar.navbar-default
    .container-fluid
        .navbar-header
            button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
                span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
            a.navbar-brand(href='/') tlks.io
        #bs-example-navbar-collapse-1.collapse.navbar-collapse
            ul.nav.navbar-nav
                li(class=controller==='home'?'active':undefined)
                    a(href='/') Home
                li(class=controller==='activity'?'active':undefined)
                    a(href='/activity') Activity
            ul.nav.navbar-nav.navbar-right
                li.dropdown
                    a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-expanded='false') ...
                        span.caret
                    ul.dropdown-menu(role='menu')
                        li
                            a(href='/about') About
                        li
                            a(href='/faq') FAQ
                if user
                    li
                        a(href='#', data-toggle='dropdown', role='button', aria-expanded='false')
                            span @
                            span= user.username
                            span.caret
                        ul.dropdown-menu(role='menu')
                            li
                                a(href='/profile/' + user.username) Profile
                            li
                                a(href='/profile/' + user.username + '/settings') Settings
                            li
                                a(href='/auth/logout') Logout
                else
                    li
                        a(href='/auth/login') Login
                if user
                    li
                        a(href='/talk/add')
                            i.fa.fa-bolt

